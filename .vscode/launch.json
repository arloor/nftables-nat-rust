    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug WebUI (HTTPS)",
            "cargo": {
                "args": [
                    "build",
                    "--package=webui",
                    "--bin=webui"
                ],
                "problemMatcher": [
                    "$rustc"
                ],
                "filter": {
                    "name": "webui",
                    "kind": "bin"
                }
            },
            "args": [
                "--port",
                "8444",
                "--username",
                "admin",
                "--password",
                "your_strong_password_here",
                "--jwt-secret",
                "dev-secret-key-do-not-use-in-production",
                "--toml-config",
                "${workspaceFolder}/nat.toml",
                "--cert",
                "${workspaceFolder}/cert.pem",
                "--key",
                "${workspaceFolder}/privkey.pem"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "RUST_LOG": "debug,webui=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug NAT CLI (Legacy)",
            "cargo": {
                "args": [
                    "build",
                    "--package=nat-cli",
                    "--bin=nat"
                ],
                "problemMatcher": [
                    "$rustc"
                ],
                "filter": {
                    "name": "nat",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/nat.conf"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "RUST_LOG": "debug"
            }
        }
    ]
}